        <h1 class='add-incident-title'>Add Incident</h1>
        
        <div>
            <form action='/add-incident' method='POST' class='add-incident-form'>
                <div class='add-incident-form-details'>
                <label for='callstatus'>Call Status</label>
                <select name='callstatus'>
                    <option value='OPEN'>OPEN</option>
                    <option value='ON-SITE'>ON-SITE</option>
                    <option value='CLEARED'>CLEARED</option>
                    <option value='DELETED'>DELETED</option>
                </select>

                <label for='callpriority'>Call Priority</label>
