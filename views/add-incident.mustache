                    <option value='1'>21</option>
                    <option value='1'>22</option>
                    <option value='1'>23</option>
                    <option value='1'>24</option>
                </select>
                {{! <input type='text' name='locationdistrict' /> }}
                <label for='locationbeat'>Beat</label>
                <input type='text' name='locationbeat' />
                <label for='incidentdescription'>Incident Description</label>
                <input type='text' name='incidentdescription' />
                <label for='locationaddress'>Address</label>
                <input type='text' name='locationaddress' />
                <label for='locationcity'>City</label>
                <input type='text' name='locationcity' />
                <label for='locationzipcode'>Zipcode</label>
                <input type='text' name='locationzipcode' />
                <label for='locationneighborhood'>Neighborhood</label>
                <input type='text' name='locationneighborhood' />
                <label for='respondingunit'>Responding Unit</label>
                <input type='text' name='respondingunit' />
